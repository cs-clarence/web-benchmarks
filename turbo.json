{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "image:build": {
      "dependsOn": [
        "^image:build"
      ],
      "cache": true,
      "inputs": [
        "src/**/*.*",
        "Dockerfile",
        "../../Dockerfile"
      ]
    },
    "image:push": {
      "dependsOn": [
        "^image:build",
        "^image:push"
      ],
      "cache": false,
      "inputs": [
        "src/**/*.*"
      ]
    },
    "migrate:diff": {
      "dependsOn": [
        "^migrate:diff"
      ],
      "cache": true,
      "inputs": [
        "src/**/*.*"
      ]
    }
  }
}